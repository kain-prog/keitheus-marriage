<div class="my-16 flex gap-6 justify-center flex-wrap md:flex-nowrap">

    {% for product in products %}
        <div class="px-12 py-8 bg-slate-50 w-full max-w-[450px] flex flex-col justify-center items-center shadow" id="{{ product.id }}" >
            <img class="w-full max-w-[200px] rounded mb-8" src="/uploads/{{ product.thumbnail }}" alt="{{ product.name }}" />

            <div class="w-full">
                <h3 class="text-xl text-center font-semibold marcellus w-content">{{ product.name }}</h3>
                <p class="text-center marcellus text-slate-600 mb-6">{{ product.shortDescription }}</p>

                {% if product.categories|length > 0 %}
                    <div class="flex items-center justify-center gap-3">
                        {% for category in product.categories %}
                            <span class="font-semibold text-xs marcellus px-4 py-1 rounded-full border select-none border-slate-300 bg-slate-300">{{ category.name }}</span>
                        {% endfor %}
                    </div>
                {% endif %}

                <h2 class="text-center text-4xl my-5 marcellus">{{ product.price|format_currency('BRL', locale='pt_BR') }}</h2>

                {% if product.isPresented %}
                    <a href="#" class="w-full cursor-pointer bg-slate-700 hover:bg-slate-600 marcellus transition duration-150">
                        <i class="fas fa-check text-sm"></i>
                        JÃ¡ Presenteado
                    </a>
                {% else %}
                    <a href="#" class="transition duration-150 w-full block py-2 rounded text-slate-50 text-center cursor-pointer bg-slate-700 hover:bg-slate-600 marcellus">
                        <i class="far fa-paper-plane mr-2 text-sm"></i>
                        <span class="font-semibold">Presentear</span>
                    </a>
                {% endif %}
            </div>
        </div>

    {% endfor %}

</div>
