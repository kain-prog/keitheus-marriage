{% block title %}{{ title }}{% endblock %}

{% block content %}

    <table
        width="680px"
        border="0"
        cellpadding="0"
        cellspacing="0"
        align="center"
        style="
            background: #849578;
            background-image: url({{ absolute_url(asset('imgs/asfalt-light.png')) }});
            background-size: cover;
            background-position: center;
            border-radius: 45px;
        "
