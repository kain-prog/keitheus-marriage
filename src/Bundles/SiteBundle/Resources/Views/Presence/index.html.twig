    <div class="pt-[72px] bg-gray-100 pb-20">
        <div class="mx-auto max-w-7xl px-6 lg:px-8 pt-20">
            <h1 class="text-5xl text-center mb-6 marcellus">Confirmar Presença</h1>
            <p class="text-lg max-w-2xl mx-auto text-center marcellus mb-16">
                Sua presença é fundamental para tornar nosso dia ainda mais especial. Por favor, confirme sua
                participação até o dia <strong>20</strong> de <strong>setembro</strong>.
            </p>

            <div class="bg-white px-4 lg:px-12 py-16 mx-auto max-w-3xl shadow rounded">
                <h2 class="text-3xl text-center mb-2 marcellus">Formulário de Confirmação</h2>
                <p class="text-md text-center mb-6 marcellus">Preencha as informações abaixo para confirmar sua presença</p>


                <div data-controller="presence">

                    {% include '@Components/toast-success.html.twig' %}
                    {% include '@Components/toast-danger.html.twig' %}

                    {{ form_start(form, {
                        attr: {
                            'data-presence-target': 'sendForm',
                            'data-action': 'submit->presence#submit',
                            'id': 'Presence-form',
                        }
                    }) }}

                    <div data-controller="dropdown" class="relative w-full mb-4">
                        <label class="mb-1 block marcellus" for="guest_confirmation_guest">Seu nome: </label>
                        <a
                            id="select-guest"
                            type="button"
                            data-action="click->dropdown#toggle"
                            class="inline-flex marcellus justify-between w-full px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
                        >
                            <span id="dropdown-label" class="marcellus">Selecione o seu nome...</span>
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 ml-2 -mr-1" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M6.293 9.293a1 1 0 011.414 0L10 11.586l2.293-2.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
                            </svg>
                        </a>

                        <div
                            id="dropdown-search"
                            data-dropdown-target="menu"
                            class="max-h-[300px] overflow-auto border border-transparent outline-none hidden absolute z-10 mt-0 w-full shadow-lg bg-white ring-1 ring-slate-300 ring-opacity-5 p-1 space-y-1"
                        >
                            <input
                                data-dropdown-target="input"
                                data-action="input->dropdown#filter keydown->dropdown#keydown"
                                type="text"
                                class="block w-full px-4 py-2 text-gray-800 border rounded-md border-gray-300 focus:outline-none"
                                placeholder="Pesquisar..."
                            >

                            {% for guest in form.guest.vars.choices %}
                                <a
                                    href="#"
                                    data-action="click->dropdown#select"
                                    class="block px-4 py-2 text-gray-700 hover:bg-gray-100 active:bg-blue-100 cursor-pointer rounded-md marcellus"
                                    data-value="{{ guest.value }}"
                                >{{ guest.label }}</a>
                            {% endfor %}

                        </div>
                    </div>

                    {{ form_widget(form.guest, {'required': false, 'attr': {'class': 'hidden'}}) }}

                    <div class="w-full flex flex-col justify-center items-center marcellus mb-4">
                        {{ form_label(form.is_confirmed) }}
                        <div class="flex gap-6">
                            <div>
                                {{ form_widget(form.is_confirmed[0], {'attr': {'class': 'marcellus form-radio text-green-600'}}) }}
                                {{ form_label(form.is_confirmed[0]) }}
                            </div>

                            <div>
                                {{ form_widget(form.is_confirmed[1], {'attr': {'class': 'marcellus form-radio text-red-600'}}) }}
                                {{ form_label(form.is_confirmed[1]) }}
                            </div>
                        </div>
                    </div>

                    <div class="flex-col md:flex-row flex justify-between gap-3 mb-4">
                        <div id="div-not-come" class="flex-col md:flex-row flex justify-between gap-3 mb-4 hidden">
                            <div class="max-w-2xl marcellus">
                                {{ form_row(form.guest_not_come, {label_attr: { class: 'text-[12px] font-normal' }}) }}
                            </div>
                        </div>
                    </div>

